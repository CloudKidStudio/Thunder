extend base

append content
	.col-md-2.col-sm-3.hidden-xs
		.btn-group-vertical.full-width
			if (user.privilege >= privilege.editor)
				a.btn.btn-default.btn-block(href="/admin/sounds")
					span.icon.glyphicon.glyphicon-headphones
					| Sounds
				a.btn.btn-default.btn-block(href="/admin/categories")
					span.icon.glyphicon.glyphicon-folder-open
					| Categories
				a.btn.btn-default.btn-block(href="/admin/tags")
					span.icon.glyphicon.glyphicon-tags
					| Tags
			if (user.privilege == privilege.admin)
				a.btn.btn-default.btn-block(href="/admin/users")
					span.icon.glyphicon.glyphicon-th-list
					| Users
			a.btn.btn-default.btn-block(href="/admin/profile")
				span.icon.glyphicon.glyphicon-user
				| Profile
			a.btn.btn-default.btn-block(href="/logout")
				span.icon.glyphicon.glyphicon-log-out
				| Logout
	.col-md-10.col-sm-9
		block form