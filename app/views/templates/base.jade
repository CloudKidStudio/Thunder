doctype html
html
	head
		title Thunder
		
		meta(name="author" content="CloudKid")
		meta(name="description" content="{{description}}")
		meta(name="keywords" content="{{keywords}}")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

		link(href="/css/libraries.css", rel="stylesheet")
		link(href="/css/main.css", rel="stylesheet")

		link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:300,400")
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					span.navbar-brand
						if (user)
							a(href="/admin")= user.name 
							span.details is bringing the 
							a(href='/') Thunder
						else
							a(href='/') Thunder
				.collapse.navbar-collapse
					ul(class="nav navbar-nav navbar-right")
						if (user)
							li
								a(href="/favorites" title="Favorites" data-placement="bottom" data-toggle="tooltip")
									span.icon.glyphicon.glyphicon-heart
									span.hidden-lg.hidden-md.hidden-sm.visible-inline-xs Favorites
							li
								a(href="#" title="Settings" data-placement="bottom" data-toggle="dropdown")
									span.icon.glyphicon.glyphicon-cog
									span.hidden-lg.hidden-md.hidden-sm.visible-inline-xs Settings
									span.caret
								ul.dropdown-menu
									li
										a(href="/admin/sounds")
											span.icon.glyphicon.glyphicon-headphones
											| Sounds
									li
										a(href="/admin/users")
											span.icon.glyphicon.glyphicon-th-list
											| Users
									li
										a(href="/admin/categories")
											span.icon.glyphicon.glyphicon-folder-open
											| Categories
									li
										a(href="/admin/tags")
											span.icon.glyphicon.glyphicon-tags
											| Tags
									li
										a(href="/admin/profile")
											span.icon.glyphicon.glyphicon-user
											| Profile
									li
										a(href="/logout")
											span.icon.glyphicon.glyphicon-log-out
											| Logout
						else 
							li
								a(href="/login" title="Login" data-placement="bottom" data-toggle="tooltip")
									span.icon.glyphicon.glyphicon-log-in
									span.hidden-lg.hidden-md.hidden-sm.visible-inline-xs Login
		main.container
			.row
				block content
		.container.text-center
			footer &copy; #{fullYear} CloudKid

		script(src="/js/libraries.js")
		script(src="/js/main.js")