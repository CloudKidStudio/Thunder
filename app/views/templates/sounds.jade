extend base

append content
	.col-sm-9
		block title
		.row
			if sounds
				for sound in sounds 
					.sound.col-md-4.col-sm-6
						.soundContent
							a(href="/sound/#{sound.uri}")
								h3.name #{sound.name}
							include ../partials/tags
							.btn-group.controls
								button.btn.btn-default.toggle
									span.off.glyphicon.glyphicon-play
									span.on.glyphicon.glyphicon-stop
									span.timeline
										span.bar
								a.download.btn.btn-default(href="/download/#{sound.uri}/original" title="#{sound.type.toUpperCase()} - #{bytesToSize(sound.size)}" data-toggle="tooltip")
									span.glyphicon.glyphicon-download-alt
								include ../partials/favorite
		nav
			ul.pagination
				// the [<<] button if available
				if (pagination.current > 1)
					li: a(href="/page/#{pagination.current-1}" aria-label="Previous") 
						span(aria-hidden="true") &laquo;
				//the current page
				li.active: a(href="#")= pagination.current
				//the next five (if available) pages
				- var n = pagination.current + 1
				- var max = pagination.current + 5;
				- max = max < pagination.total ? max: pagination.total;
				while n <= max
					li: a(href="/page/#{n}")= n
					- n++
				// the [>>] button if available
				if (pagination.current < pagination.total )
					li: a(href="/page/#{pagination.current+1}" aria-label="Next")
						span(aria-hidden="true") &raquo;
	.col-sm-3
		include ../partials/sidebar