extend templates/base

append title
	| Install - 

block body
	body.install
		.container
			.row
				.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
					.panel.panel-default
						.panel-heading
							h1.panel-title Install Thunder

						if (completed)
							.panel-body
								.alert.alert-success Site has successfully installed!
								.text-center
									a.btn.btn-lg.btn-primary(href="/") Continue
						else
							form.panel-body.form-horizontal(method="post" action="/")
								include partials/feedback
								.form-group
									label.control-label.col-sm-3(for="db") Database
									.col-sm-9
										input.form-control(type="text" id="db" name="db" placeholder="mongodb://localhost/thunder")
										p.help-block The MongoDB connection, 
											a(href="http://docs.mongodb.org/manual/reference/connection-string/") see docs 
											| for more info.
								.form-group
									label.control-label.col-sm-3(for="secret") Session Secret
									.col-sm-9
										input.form-control(type="text" id="secret" name="secret")
										p.help-block Session cookie is signed with this secret to prevent tampering.
								.form-group
									label.control-label.col-sm-3(for="gmailUser") Gmail User
									.col-sm-9
										input.form-control(type="text" id="gmailUser" name="gmailUser" placeholder="user@gmail.com")
										p.help-block Gmail account for sending site emails.
								.form-group
									label.control-label.col-sm-3(for="gmailPassword") Gmail Password
									.col-sm-9
										input.form-control(type="password" id="gmailPassword" name="gmailPassword")
										p.help-block Gmail account password for sending emails.
								.form-group.form-actions.text-center
									.col-sm-9.col-sm-offset-3
										button.btn.btn-lg.btn-primary(type='submit') Install