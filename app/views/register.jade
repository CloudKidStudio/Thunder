extend partials/header

append content
	h2 Register
	div.row
		div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
			#message
			if message.length
				.alert.alert-danger #{message}
			form.form-login(action='/register', method='post')
				.form-group
					input.form-control(type='text', name='name',  placeholder='Name',required, autofocus)
				.form-group
					input.form-control(type='text', name='username',  placeholder='Username',required, autofocus)
				.form-group
					input.form-control(type='text', name='email',  placeholder='Email',required, autofocus)
				.form-group
					input.form-control(type='password', name='password', placeholder='Password', required)
				button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up